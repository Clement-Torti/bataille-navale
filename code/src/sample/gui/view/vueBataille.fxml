<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml">

    <top>
        <HBox alignment="CENTER">
            <Label fx:id="chrono" text="00:00:00">
                <HBox.margin>
                    <Insets right="10"/>
                </HBox.margin>
            </Label>
            <Button text="Pause" onAction="#pause"/>
        </HBox>
    </top>



    <left>
        <ScrollPane>
            <Label fx:id="labelIA" text="Message IA"/>
        </ScrollPane>
    </left>



    <center>
            <HBox alignment="CENTER">
                <BorderPane.margin>
                    <Insets top="100" bottom="100"/>
                </BorderPane.margin>
                <IAGrid fx:id="iaGrid"/>
                <PlayerGrid fx:id="playerGrid">
                    <padding>
                        <Insets left="100"/>
                    </padding>
                </PlayerGrid>
            </HBox>

    </center>



    <right>
        <ScrollPane>
            <Label fx:id="labelJoueur" text="Message joueur"/>
        </ScrollPane>
    </right>



    <bottom>
        <HBox alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="60"/>
            </BorderPane.margin>

            <BoatsBox>
                <HBox.margin>
                    <Insets right="200"/>
                </HBox.margin>
            </BoatsBox>
            <BoatsBox/>

        </HBox>
    </bottom>




</BorderPane>
