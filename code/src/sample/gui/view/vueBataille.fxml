<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml">

    <top>
        <HBox alignment="CENTER">
            <Label fx:id="chrono" text="00:00:00">
                <HBox.margin>
                    <Insets right="10"/>
                </HBox.margin>
            </Label>
            <Button text="Pause" onAction="#pause"/>
        </HBox>
    </top>



    <left>
        <ListView fx:id="playerMessage" prefWidth="110" minWidth="80"/>
    </left>



    <center>
            <HBox alignment="CENTER">
                <BorderPane.margin>
                    <Insets top="50" bottom="50"/>
                </BorderPane.margin>
                <VBox alignment="CENTER">
                    <IAGrid fx:id="iaGrid">
                        <padding>
                            <Insets left="20" bottom="20"/>
                        </padding>
                    </IAGrid>
                    <Label text="Grille IA"/>
                </VBox>
                <VBox alignment="CENTER">
                    <PlayerGrid fx:id="playerGrid">
                        <padding>
                            <Insets left="20" right="20" bottom="20"/>
                        </padding>
                    </PlayerGrid>
                    <Label text="Grille Joueur"/>
                </VBox>

            </HBox>

    </center>



    <right>
        <ListView fx:id="iaMessage" prefWidth="110" minWidth="80" />
    </right>



    <bottom>
        <HBox alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="60"/>
            </BorderPane.margin>

            <BoatsBox>
                <HBox.margin>
                    <Insets right="200"/>
                </HBox.margin>
            </BoatsBox>
            <BoatsBox/>

        </HBox>
    </bottom>




</BorderPane>
